<body>
    <div class="container" style="padding-top: 30px; width: 70%;">
        <form action="/bug" method="POST">
            <div class="mb-3">
                <label for="bugTitle" class="form-label">Bug-Title</label>
                <input type="text" name="Title" class="form-control" id="bugTitle" placeholder="Title"/>
            </div>

            <label for="state" class="form-label">Bug-origin</label>
            <select name="state" id="state" class="form-control" style="margin-bottom: 15px;">
                <option value="App">App</option>
                <option value="Website">Website</option>
                <option value="S&A">Security and Authetication</option>
            </select>

            <div class="mb-3">
                <label for="bugDesc" class="form-label">Bug-Description</label>
                <textarea  type="text" name="desc" class="form-control" id="bugDesc" rows="3"></textarea>
            </div>

            <label for="threatLevel" class="form-label">Threat Level</label>
            <input type="range" name="threatlevel" class="form-range" min="0" max="5" id="threatLevel"/>

